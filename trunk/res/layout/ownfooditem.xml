<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:id="@+id/ownfooditemview"
  android:orientation="vertical"
  android:scrollbars="vertical"
  android:layout_height="wrap_content">
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/name_row" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView style="@style/Standard" android:id="@+id/name"
            android:layout_width="wrap_content" android:text="@string/name"
            android:layout_height="wrap_content" />
        <EditText style="@style/Standard" android:id="@+id/name_edittext"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:inputType="text" android:text=""
            android:layout_weight="2" />
    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/unit_name_row" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView style="@style/Standard" android:id="@+id/unit_name"
            android:layout_width="wrap_content" android:text="@string/unit_name"
            android:layout_height="wrap_content" />
        <EditText style="@style/Standard" android:id="@+id/unit_name_edittext"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:inputType="text" android:text="@string/standard_unit_name"
            android:layout_weight="2" />
    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/percentage_of_carbs_row" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView style="@style/Standard" android:id="@+id/percentage_of_carbs"
            android:layout_width="wrap_content" android:text="@string/percentage_of_carbs"
            android:layout_height="wrap_content" />
        <EditText style="@style/Standard" android:id="@+id/percentage_of_carbs_edittext"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:inputType="numberDecimal" android:text="0"
            android:layout_weight="2" />
    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/amount_of_carbs_row" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView style="@style/Standard" android:id="@+id/chosen_amount_own_food_item"
            android:layout_width="wrap_content" android:text="@string/chosen_amount_own_food_item"
            android:layout_height="wrap_content" />
        <EditText style="@style/Standard" android:id="@+id/chosen_amount_own_food_item_edittext"
            android:layout_width="0dip" android:layout_height="wrap_content"
            android:inputType="numberDecimal" android:text="0"
            android:layout_weight="2" />
    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_row" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/own_food_item_button" style="@style/Standard" 
            android:layout_height="wrap_content"
            android:text="@string/Save_chosen_amount" android:layout_width="0dip" android:layout_weight="1"/>

    </TableRow>
</LinearLayout>
