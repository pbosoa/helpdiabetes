<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/addselecteditemview" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:scrollbars="vertical">
	<TextView style="@style/Standard" android:id="@+id/standardamount"
		android:layout_width="wrap_content" android:text="standard amount"
		android:layout_height="wrap_content" />
	<TextView style="@style/Standard" android:id="@+id/choseamnt_textview"
		android:layout_width="wrap_content" android:text="@string/choseamnt"
		android:layout_height="wrap_content" />
	<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/choseamnt_row" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<EditText style="@style/Standard" android:id="@+id/choseamnt_edittext"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:inputType="numberDecimal" android:text="0"
			android:layout_weight="2" />
		<Button android:id="@+id/choseamnt_button" style="@style/Standard" 
			android:layout_height="wrap_content"
			android:text="@string/Save_chosen_amount" android:layout_width="0dip" android:layout_weight="1"/>

	</TableRow>
	<TextView style="@style/Standard" android:id="@+id/result"
		android:layout_width="wrap_content" android:text="result to be displayed"
		android:layout_height="wrap_content" />
</LinearLayout>	